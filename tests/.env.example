# Test Environment Configuration
# Copy this file to .env and configure for your test environment

# API Configuration
TEST_API_URL=http://localhost:8787
TEST_API_TIMEOUT=30000

# Database Configuration
TEST_DATABASE_URL=libsql://your-test-database.turso.io
TEST_AUTH_TOKEN=your_test_auth_token_here

# Email Testing (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
TEST_EMAIL_RECIPIENT=test@example.com

# Payment Testing (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_TEST_MODE=true

# Feature Flags
RUN_INTEGRATION_TESTS=true
RUN_E2E_TESTS=true
RUN_PERFORMANCE_TESTS=true
RUN_SECURITY_TESTS=true

# Test Data
TEST_DEFAULT_PASSWORD=TestPassword123!
TEST_EMAIL_DOMAIN=@test.xswarm.local
