# xSwarm Boss - Staging Environment Configuration
# Copy this to staging.env and fill in your staging values

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=staging
NODE_ENV=production

# =============================================================================
# Service URLs
# =============================================================================
WORKER_URL=https://boss-ai-staging.workers.dev
BASE_URL=https://staging.xswarm.ai
API_URL=https://boss-ai-staging.workers.dev/api

# =============================================================================
# AI Provider API Keys (TEST KEYS)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-xxxxx...
OPENAI_API_KEY=sk-xxxxx...

# =============================================================================
# Twilio (TEST ACCOUNT)
# =============================================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN_TEST=your_test_auth_token_here
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# =============================================================================
# SendGrid (TEST API KEY)
# =============================================================================
SENDGRID_API_KEY_TEST=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=staging@xswarm.ai
SENDGRID_FROM_NAME=xSwarm Boss (Staging)

# =============================================================================
# Stripe (TEST MODE)
# =============================================================================
STRIPE_SECRET_KEY_TEST=***REMOVED***
STRIPE_PUBLISHABLE_KEY_TEST=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET_TEST=whsec_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Database (Staging Turso)
# =============================================================================
TURSO_DATABASE_URL=libsql://xswarm-staging.turso.io
TURSO_AUTH_TOKEN=eyJhbGciOiJFZERTQSIsInR5cCI6IkpXVCJ9...

# =============================================================================
# Authentication
# =============================================================================
JWT_SECRET=staging_jwt_secret_key_minimum_32_characters
JWT_EXPIRES_IN=7d

# =============================================================================
# Cloudflare
# =============================================================================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_account_id
S3_ACCESS_KEY_ID=your_r2_access_key
S3_SECRET_ACCESS_KEY=your_r2_secret_key

# =============================================================================
# Monitoring & Alerts
# =============================================================================
ADMIN_EMAIL=staging@xswarm.ai
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxxxx/xxxxx/xxxxx

# =============================================================================
# Rate Limiting (More lenient for testing)
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=120
RATE_LIMIT_REQUESTS_PER_HOUR=5000

# =============================================================================
# Feature Flags
# =============================================================================
VOICE_ENABLED=true
SMS_ENABLED=true
EMAIL_ENABLED=true
TEAMS_ENABLED=true
MARKETPLACE_ENABLED=true

# =============================================================================
# Logging (More verbose)
# =============================================================================
LOG_LEVEL=debug
STRUCTURED_LOGGING=true

# =============================================================================
# Security (Less strict for testing)
# =============================================================================
CORS_ALLOWED_ORIGINS=https://staging.xswarm.ai,http://localhost:3000
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=lax

# =============================================================================
# Performance
# =============================================================================
DATABASE_CONNECTION_POOL_SIZE=5
API_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_MB=10

# =============================================================================
# Backup & Recovery
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 4 * * * # Daily at 4 AM
BACKUP_RETENTION_DAYS=7
