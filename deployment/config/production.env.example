# xSwarm Boss - Production Environment Configuration
# Copy this to production.env and fill in your production values

# =============================================================================
# Environment
# =============================================================================
ENVIRONMENT=production
NODE_ENV=production

# =============================================================================
# Service URLs
# =============================================================================
WORKER_URL=https://boss-ai.workers.dev
BASE_URL=https://xswarm.ai
API_URL=https://boss-ai.workers.dev/api

# =============================================================================
# AI Provider API Keys (LIVE KEYS ONLY)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-xxxxx...
OPENAI_API_KEY=sk-xxxxx...

# =============================================================================
# Twilio (LIVE ACCOUNT ONLY)
# =============================================================================
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN_LIVE=your_live_auth_token_here
TWILIO_PHONE_NUMBER=+1xxxxxxxxxx

# =============================================================================
# SendGrid (LIVE API KEY ONLY)
# =============================================================================
SENDGRID_API_KEY_LIVE=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
SENDGRID_FROM_EMAIL=noreply@xswarm.ai
SENDGRID_FROM_NAME=xSwarm Boss

# =============================================================================
# Stripe (LIVE MODE ONLY)
# =============================================================================
STRIPE_SECRET_KEY_LIVE=***REMOVED***
STRIPE_PUBLISHABLE_KEY_LIVE=***REMOVED***
STRIPE_WEBHOOK_SECRET_LIVE=***REMOVED***

# =============================================================================
# Database (Production Turso)
# =============================================================================
TURSO_DATABASE_URL=libsql://xswarm-production.turso.io
TURSO_AUTH_TOKEN=eyJhbGciOiJFZERTQSIsInR5cCI6IkpXVCJ9...

# =============================================================================
# Authentication
# =============================================================================
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters_long
JWT_EXPIRES_IN=7d

# =============================================================================
# Cloudflare
# =============================================================================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token
CLOUDFLARE_ACCOUNT_ID=your_account_id
S3_ACCESS_KEY_ID=your_r2_access_key
S3_SECRET_ACCESS_KEY=your_r2_secret_key

# =============================================================================
# Monitoring & Alerts
# =============================================================================
ADMIN_EMAIL=admin@xswarm.ai
ADMIN_PHONE=+1xxxxxxxxxx
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxxxx/xxxxx/xxxxx

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# =============================================================================
# Feature Flags
# =============================================================================
VOICE_ENABLED=true
SMS_ENABLED=true
EMAIL_ENABLED=true
TEAMS_ENABLED=true
MARKETPLACE_ENABLED=true

# =============================================================================
# Logging
# =============================================================================
LOG_LEVEL=info
STRUCTURED_LOGGING=true

# =============================================================================
# Security
# =============================================================================
CORS_ALLOWED_ORIGINS=https://xswarm.ai,https://www.xswarm.ai
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=strict

# =============================================================================
# Performance
# =============================================================================
DATABASE_CONNECTION_POOL_SIZE=10
API_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_MB=10

# =============================================================================
# Backup & Recovery
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
